<resources >
    <!-- Base application theme. -->
    <style name="Theme.DictionaryApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/u_paris</item>
        <item name="colorPrimaryVariant">@color/u_paris_soft</item>
        <item name="colorOnPrimary">@color/real_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="chipStyle">@style/ChipDicoAppearance</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:paddingVertical">10dp</item>
    </style>

    <!-- Material Default -->
    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@android:color/darker_gray</item>
    </style>

    <style name="ButtonIconAppearance" parent="Widget.MaterialComponents.Button.Icon"/>

    <!-- Custom Chip -->
    <style name="ChipAppearance" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="chipIconSize">13sp</item>
    </style>

    <style name="ChipDicoAppearance" parent="ChipAppearance">
        <item name="android:textColor">@color/chip_color</item>
        <item name="chipIcon">@drawable/ic_chip</item>
        <item name="chipIconTint">@color/chip_color</item>
        <item name="chipBackgroundColor">@color/chip_back_color</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom FAB -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/myCustomThemeForFab</item>
       
    </style>

    <style name="customFAB">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">14dp</item>
        <item name="cornerSizeBottomRight">14dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="myCustomThemeForFab" parent="">
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/real_white</item>
    </style>


</resources>