<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom word Search -->
    <style name="ButtonWordAppearance" parent="ButtonIconAppearance">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="iconSize" >13sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">5dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Custom Search bar -->
    <style name="TextInputSearchLayoutAppearance" parent="TextInputLayoutAppearance">
        <item name="startIconTint">@color/search_bar</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="boxStrokeColor">@color/search_bar</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Custom Dico Dialog -->
    <style name="DialogSearchBar" parent="android:Widget">
        <item name="background">@color/u_paris</item>
    </style>

    <style name="TextInputDicoLayoutAppearance" parent="TextInputLayoutAppearance">
        <item name="android:background">@color/u_paris</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/real_white</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="startIconTint">?attr/colorOnPrimary</item>
        <item name="endIconTint">?attr/colorOnPrimary</item>
    </style>

    <!-- Custom Preferences -->
    <style name="PreferenceTiTle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/u_paris</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:letterSpacing">0.3</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="PreferenceInput" parent="TextInputLayoutAppearance">
        <item name="android:layout_marginHorizontal">@dimen/global_margin_horizontal</item>
    </style>
    
    <style name="PreferenceButton" parent="ButtonIconAppearance">
        <item name="android:backgroundTint">@android:color/darker_gray</item>
    </style>

    <style name="PreferenceRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/radio_button_tint</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/radio_button_tint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>